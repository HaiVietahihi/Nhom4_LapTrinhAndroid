<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnTheme1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/baseline_lens_50"
            android:backgroundTint="@color/white"
            app:tint="@color/theme1ColorPrimary"
            android:contentDescription="Chọn giao diện 1" />

        <ImageButton
            android:id="@+id/btnTheme2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/baseline_lens_50"
            android:backgroundTint="@color/white"
            app:tint="@color/theme2ColorPrimary"
            android:contentDescription="Chọn giao diện 2" />

        <ImageButton
            android:id="@+id/btnTheme3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/baseline_lens_50"
            android:backgroundTint="@color/white"
            app:tint="@color/theme3ColorPrimary"
            android:contentDescription="Chọn giao diện 3" />

        <ImageButton
            android:id="@+id/btnTheme4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/baseline_lens_50"
            android:backgroundTint="@color/white"
            app:tint="@color/theme4ColorPrimary"
            android:contentDescription="Chọn giao diện 4" />
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_margin="16dp"
        app:tint="@color/white"
        android:src="@android:drawable/ic_input_add"
        android:contentDescription="Thêm khoản chi" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/fabAdd" />

</RelativeLayout>




